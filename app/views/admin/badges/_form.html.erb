<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, BadgeCategory.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :params %><br>
    <%= form.text_field :params, id: :badge_params %>
  </p>

  <p>
    <%= form.label :image_link %><br>
    <%= form.text_field :image, id: :badge_image %>
  </p>

  <p><%= form.submit %></p>
<% end %>
