<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.collection_select :rule, show_rules, :to_s, :to_s, prompt: true %>
  </p>

  <p>
    <%= form.label :rule_params %><br>
    <%= form.text_field :rule_params, id: :badge_rule_params %>
  </p>

  <p>
    <%= form.label :image_link %><br>
    <%= form.text_field :image, id: :badge_image %>
  </p>

  <p><%= form.submit %></p>
<% end %>
