<h1>Tests:</h1>

<%= button_to 'New test', new_admin_test_path, method: :get %><br><br>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        Title
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th>Level</th>
      <th>Count of questions</th>
      <th>Time for passing (in minutes)</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <%= render @tests %>
  </tbody>
</table>

<br>
<%= button_to 'Gists', admin_gists_path, method: :get %>
